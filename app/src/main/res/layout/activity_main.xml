<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/enterOneThingId"
            android:hint="Enter The One Thing" android:padding="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/assignedBy" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/assignToId" android:hint="@string/assignedBy"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:padding="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/assignToId" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/enterOneThingId" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:hint="@string/assignTo" android:padding="8dp"/>
    <Button
            android:text="@string/saveTheThing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/saveTheThing" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/assignedBy" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"/>
</android.support.constraint.ConstraintLayout>